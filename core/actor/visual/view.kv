#:kivy 1.10.0

<View>:
    canvas:
        Color:
            rgb: .1, .13, .18
        Rectangle:
            size: self.size
            pos: self.pos
    ScatterLayout:
        id: map
        on_transform_with_touch: None
        do_rotation: False
        auto_bring_to_front: False
        scale: 1.0
        scale_min: 1.0
        scale_max: 16.0
    BoxLayout:
        id: menus
        width: root.width / 2
        height: 30
        Label:
            id: current_turn
            text: "placeholder"
        Button:
            id: pause
            text: "Pause"
        Button:
            id: quit
            text: "Quit"
        Label:
            id: current_pos
            text: "0|0"
